<template>
    <no-ssr>
        <chrome-picker v-model=data />
    </no-ssr>
</template>

<script>
import {Chrome} from 'vue-color';

export default {
    props: ['value'],

    data() {
        return {_data: {
            hex: this.value,
        }};
    },
    computed: {
        data: {
            set(val) {
            },
            get() {
                this.input.background.hex + Math.round(this.input.background.a * 255).toString(16).padStart(2, '0'),
            },
        },
    },
};
</script>
